<div class="card-container">
<% @posts.each do |post| %>
  <div class="card">
    <%= link_to("/notes/#{post.id}") do %><h3 class="title"><%= post.title %></h3><% end %>
    <div class="links">
      <%= link_to("編集", "/notes/#{post.id}/edit") %>
      <span>|</span>
      <%= link_to("削除", "/notes/#{post.id}/destroy", {method: :post, data: { confirm: '本当に削除しますよ？' }}) %>
    </div>
  </div>
<% end %>
<%= link_to("追加", "/notes/new", class: "add-card") %>
</div>
