<div class="form-container">
<%= form_tag("/works/#{@work.id}/update") do %>
  <label>記事タイトル</label>
  <input type="text" name="title" value="<%= @work.title %>">
  <label>カテゴリー</label>
  <%= select :category, :name, {"graphic" => "graphic", "editorial" => "editorial", "web" => "web", "UI/UX" => "ui_ux"}, :selected => @work.category %>
  <label>スラッグ</label>
  <input type="text" name="slug" value="<%= @work.slug %>">
  <label>イメージ数</label>
  <input type="number" name="image_length" value="<%= @work.image_length %>">
  <label>概要テキスト</label>
  <textarea name="description"><%= @work.description %></textarea>
  <label>本文</label>
  <textarea name="content"><%= @work.content %></textarea>
  <button type="submit">編集</button>
<% end %>
<div class="form-container">
