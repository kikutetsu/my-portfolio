<% content_for :page_specific_styles do %>
  <style>
    <%= Rouge::Themes::Github.render(:scope => '.highlight') %>
  </style>
  <%= stylesheet_pack_tag 'rouge_custom' %>
<% end %>

<% content_for :page_title do%>
  <div class="content__nav">
    <% if @work.previous %>
    <%= link_to("< back", "/works/#{@work.previous.id}") %>
    <% else %>
    <a class="disable">< back</a>
    <% end %>
    <%= link_to("works", "/works") %>
    <% if @work.next %>
    <%= link_to("next >", "/works/#{@work.next.id}") %>
    <% else %>
    <a class="disable">next ></a>
    <% end %>
  </div>
<% end %>

<article class="content fadein">
  <h2 class="content__title"><%= @work.title %></h2>
  <% @work.category == "ui_ux" ? work_category = "UI/UX" : work_category = @work.category %>
  <p class="content__meta"><%= work_category %></p>
  <p class="content__description"><%= @work.description %></p>
  <div class="content__main">
    <%= sanitize markdown(@work.content) %>
  </div>
</article>
