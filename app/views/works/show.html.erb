<h1><%= @work.title %></h1>
<p><%= @work.category %></p>
<p><%= @work.description %></p>
<% @work.image_length.times do |image| %>
  <img src="<%= asset_pack_path "images/works/#{@work.category}/#{@work.slug}/#{image + 1}.jpg" %>">
<% end %>
<%= link_to("編集", "/works/#{@work.id}/edit") %>
<%= link_to("削除", "/works/#{@work.id}/destroy", {method: :post}) %>
