<% content_for :page_title do%>
  <h2 class="page-title">works</h2>
<% end %>

<div class="category-list">
<%= link_to("/works") do %><span>All</span><% end %>
<%= link_to("/works/category/editorial") do %><span>editorial</span><% end %>
<%= link_to("/works/category/graphic") do %><span>graphic</span><% end %>
<%= link_to("/works/category/web") do %><span>web</span><% end %>
</div>

<div class="card-container">
<% @works.shuffle.each do |work| %>
  <div class="card">
    <%= link_to("/works/#{work.id}") do %>
      <div class="card-inner">
        <figure class="content-main-image"><%= image_tag work.image.to_s %></figure>
        <h3 class="title"><%= work.title %></h3>
        <div class="category-wrap">
          <% work.category = "UI/UX" if work.category == "ui_ux" %>
          <p class="category"><%= work.category %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>
