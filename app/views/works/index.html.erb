<% content_for :page_title do%>
  <h2 class="page-title">works</h2>
<% end %>

<% if is_admin? %>
  <div class="admin-action">
    <%= link_to("/works/new") do %><span>追加</span></%><% end %>
  </div>
<% end %>

<div class="card-container">
<% @works.each do |work| %>
  <div class="card">
    <%= link_to("/works/#{work.id}") do %>
      <img src="<%= asset_pack_path "images/works/#{work.category}/#{work.slug}/thumb.jpg" %>">
      <h3 class="title"><%= work.title %></h3>
      <%= link_to("/", class: "category") do %><%= work.category %><% end %>
    <% end %>
  </div>
<% end %>
</div>
