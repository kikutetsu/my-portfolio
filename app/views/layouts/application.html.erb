<!DOCTYPE html>
<html>
  <head>
    <title>Design and Develop is FUN</title>
    <%= csrf_meta_tags %>
    <meta name="robots" content="noindex,nofollow">
    <%= stylesheet_pack_tag 'app' %>
    <%= yield :page_specific_styles %>
    <%= javascript_pack_tag 'app' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= render "header" %>
    <div class="inner wrapper">
      <%= yield %>
    </div>
  </body>
</html>
