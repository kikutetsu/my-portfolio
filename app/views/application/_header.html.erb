<header class="header" id="header">
  <div class="header-logo" id="logo">
    <%= link_to("/") do %>
      <span class="circle"></span>
    <% end %>
  </div>
  <div class="header-blank"></div>
  <nav class="header-nav">
    <ul class="nav-list">
      <li><%= link_to("notes", "/notes") %></li>
      <li><%= link_to("works", "/works") %></li>
    </ul>
    <div class="user-action">
      <% if session[:user_id] %>
        <% if is_admin? %>
          <%= link_to("- #{@current_user.name}", "/users/#{@current_user.id}") %>
        <% end %>
        <%= link_to "- logout", "/logout", {method: "post"} %>
      <% end %>
    </div>
  </nav>
</header>
<div class="menu-wrap" id="menu-wrap">
  <div class="menu-btn" id="menu-open"><div class="menu-icon"><span class="mi mi1"></span><span class="mi mi2"></span></div></div>
  <div class="menu-bg menu-bg-1" id="menu-bg1"></div>
  <div class="menu-bg menu-bg-2" id="menu-bg2"></div>
</div>
<div class="top-btn" id="to-top-btn">
  <div class="btn-inner">
    <svg class="top-arrow">
      <style type="text/css">
      	.st0{fill:none;stroke:#000000;stroke-width:3;stroke-miterlimit:10;}
      </style>
      <polyline class="st0 top-arrow1" points="16.5,49 16.5,5 24,12.5 "/>
      <g class="top-arrow2"><rect width="3" height="50"/></g>
    </svg>
    <span class="top-arrow3">TOP</span>
  </div>
</div>
