<header class="header" id="header">
  <div class="header-logo">
    <%= link_to("/") do %>
      <span class="circle"></span>
    <% end %>
  </div>
  <div class="header-blank"></div>
  <% if session[:user_id] %>
    <nav class="header-nav">
      <ul class="nav-list">
        <li><%= link_to("Works", "/works") %></li>
        <li><%= link_to("About", "/notes") %></li>
      </ul>
      <div class="user-action">
        <% if is_admin? %>
          <%= link_to("- #{@current_user.name}", "/users/#{@current_user.id}") %>
        <% end %>
        <%= link_to "- logout", "/logout", {method: "post"} %>
      </div>
    </nav>
  <% end %>
</header>
<% if session[:user_id] %>
  <div class="menu-btn" id="menu-open"><div class="menu-icon"><span class="mi mi1"></span><span class="mi mi2"></span></div></div>
  <div class="menu-bg menu-bg-1" id="menu-bg1"></div>
  <div class="menu-bg menu-bg-2" id="menu-bg2"></div>
<% end %>
