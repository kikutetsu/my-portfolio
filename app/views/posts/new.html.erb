<div class="form-container">
<%= form_tag("/notes/create") do %>
  <label>記事タイトル</label>
  <input type="text" name="title" value="<%= @post.title %>">
  <label>カテゴリー</label>
  <%= select :post, :tag, {
      "design" => "design",
      "frontend" => "frontend",
      "rails" => "rails"
    }, selected: @post.tag %>
  <label>スラッグ</label>
  <input type="text" name="slug" value="default">
  <label>画像</label>
  <input type="file" name="image">
  <label>本文</label>
  <textarea name="content"><%= @post.content %></textarea>
  <label>ステータス</label>
  <%= select :post, :status, {
      "下書き" => "pre",
      "公開" => "opened"
    }, selected: @post.post_status %>
  <button type="submit">投稿</button>
<% end %>
</div>
